<%- include ('header') %>

  <!-- Show user's subject menu -->
  <nav class="navbar navbar-expand-lg col-lg-2 col-12 d-block bg-dark">
    <a class="navbar-brand my-3" href="https://www.lib.miamioh.edu"><img class="img-fluid"
        src="https://www.lib.miamioh.edu/images/FSL_REV_186KW_UNLBRYS.png" alt="MU Libraries"></a>
    <div class="">
      <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">
          <i class="bi bi-list" style="font-size: 28px;"></i>
        </span>
      </button>
      <div class="collapse navbar-collapse flex-column" id="navbarTogglerDemo02">
        <h3 class="text-white" id="subject-title">Your subjects</h3>
        <ul class="navbar-nav nav nav-tabs pb-3" id="myTab" role="tablist">
          <% if (user.uniqueSubjects) { %>
            <% user.uniqueSubjects.forEach((s)=> { %>
              <li class="nav-item mx-2" role="presentation">
                <% let tabId=s.replace( /[^a-zA-Z0-9]+/g, '_' ); %>
                  <button class="text-start nav-link text-light ps-3 border-0" id="<%= tabId %>-tab"
                    data-bs-toggle="tab" data-bs-target="#<%= tabId %>" role="tab" aria-controls="<%= s %>">
                    <%= s %>
                  </button>
              </li>
              <% }); %>
                <% } %>
                <li class="pt-2 text-light"><small>(based on courses & departmental
                  affiliation)</small></li>
        </ul>
        
        <div>
          <a href="/logout">
            <button id="logout" type="button" class="mt-3 btn btn-light btn-sm p-2">
              <span class="glyphicon glyphicon-log-out"></span>
              <i class="bi bi-power me-2"></i>Log out</button>
          </a>
        </div>
      </div>
    </div>
  </nav>
  <!-- End of showing user's subject menu -->

  <!-- Show log-out button -->


  <div class="col-lg-8 col-12">

    <div class="tab-content" id="myTabContent">
      <% tabsCreated=[]; %>
        <% user.subjectData.forEach(m=> { %>
          <%- include('partials/subject-info', {subj: m}) %>
            <% tabsCreated.push(m.name) %>
              <% }); %>

    </div>

  </div>

  <!-- Show user's name -->
  <div class="col-lg-2 col-sm-6 col-12">
    <h1 class="text-break text-wrap">Hello, <%= user.casData.givenName %>
    </h1>

    <div class="">
      <div class="card mb-3">
        <div class="card-header px-4 py-3">
          <a class="libraryAcc collapsed" data-bs-toggle="collapse" href="#collapseCirc" aria-expanded="false"
            aria-controls="collapseCirc">
            <h4 class="mb-0">My Library Account</h4>
          </a>
        </div>
        <div class="card-body d-print-none">
          <% fakeCirc=false %>
            <% if (fakeCirc==true) { %>
              <%- include('circulation', {data: {moneyOwed: '$1.00' ,numHolds:4,numCheckouts:4}}) %>
                <% } else { %>
                  <% if (user.sierraInfo !=undefined) { %>
                    <%- include('circulation', {data: user.sierraInfo}) %>
                      <% } else { %>
                        <p>No data avalable</p>
                        <% } %>
                          <% } %>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-header px-4 py-3">
          <h4>Featured Content</h4>
        </div>
        <div class="card-body">
          <a href="https://libguides.lib.miamioh.edu/librarylife">
            <img src="/img/life-guide.png" id="life-guide" class="card-img"
              alt="Your Life and the Library: Resouces for Leisure and Learning, Interests and Information, Fun and Facts, and Education and Entertainment">
            <p class="mt-3">The L.I.F.E. guide suggests library resources for non-academic purposes.</p>
          </a>
        </div>
      </div>
    </div>

  </div>
  <%- include ('footer') %>