<% subj.id=subj.name.replace( /[^a-zA-Z0-9]+/g, '_' ); %>
  <div class="tab-pane show" id="<%= subj.id %>" role="tabpanel"
    aria-labelledby="<%= subj.id %>-tab">
    <h3 class="h1">
      <%= subj.name %>
    </h3>
    <div class="row">

      <% if (! subj.resources.hasOwnProperty('metadata')) { %>
        <div class="col-md-4 col-12">
          <div class="card">
            <div class="card-header px-4 py-3">
              <h4 class="mb-0"><i class="bi bi-x-circle me-2"></i>&nbsp;No Resources Found</h4>
            </div>
            <div class="card-body">No resources found for <%= subj.name %>
            </div>
          </div>
        </div>
        <% } else { %>

          <div class="col-md-4 col-12">
            <div class="card mb-3 ">
              <div class="card-header px-4 py-3">
                <h4 class="mb-0"><i class="bi bi-lightbulb me-2"></i>&nbsp;Subject Guides</h4>
              </div>
              <div class="card-body">
                <% if ( parseInt (subj.resources.metadata.sizeof.guides)> 0) {
                  %>
                  <%- include('guides', {guides: subj.resources.guides}) %>
                    <% } %>
              </div>
            </div>
          </div>

          <div class="col-md-4 col-12">
            <div class="card mb-3 ">
              <div class="card-header px-4 py-3">
                <h4 class="mb-0"><i class="bi bi-sort-alpha-down me-2"></i>&nbsp;Databases</h4>
              </div>
              <div class="card-body">
                <% if ( parseInt (subj.resources.metadata.sizeof.databases)> 0)
                  { %>
                  <%- include('databases', {databases:
                    subj.resources.databases}) %>
                    <% } %>
                      <% if (subj.resources.subjects &&
                        subj.resources.subjects.length> 0) { %>
                        <%- include('databases-alt', {subjects:
                          subj.resources.subjects}); %>
                          <% }%>
              </div>
            </div>
          </div>

          <div class="col-md-4 col-12">
            <div class="card mb-3 ">
              <div class="card-header px-4 py-3">
                <h4 class="mb-0"><i class="bi bi-person me-2"></i>&nbsp;My Librarian</h4>
              </div>
              <div class="card-body">
                <% if ( parseInt (subj.resources.metadata.sizeof.librarians)> 0)
                  { %>
                  <%- include('librarian', {libn: subj.resources.librarians[0]})
                    %>
                    <% } %>
              </div>
            </div>
          </div>
          <% } %>


    </div>
  </div>