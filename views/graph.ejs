<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyGuide Usage</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    <script src="https://d3js.org/d3.v4.min.js"></script>
    <script src="/js/createBarChart.js"></script>
    <style>
        .bar { fill: steelblue}
    </style>
</head>
<body class="container">
    <h1>MyGuide Usage</h1>
    <div id="options">
        <ul id="increment-selector">
            <li class="btn btn-outline selected" data-increment="day">Daily</li>
            <li class="btn btn-outline " data-increment="month">Monthly</li>
            <li class="btn btn-outline" data-increment="year">Yearly</li>
        </ul>
        <label for="startDate">Start date:</label>
        <input type="date" class="dateField" id="startDate" name="startDate" value="2021-08-31"
       min="2021-08-31">

       <label for="endDate">End date:</label>
       <input type="date" class="dateField" id="endDate" name="endDate" value=""
      min="2021-08-31">

    </div>
    <svg height="500" width="1000"></svg>
    <script>
        var d = new Date();
        var today = d.getFullYear() + "-" + (d.getMonth()+1) + "-" + d.getDate();
        console.log(today)
            $(document).ready(function() {
                updateChart();
                $('.btn').click(function() {
                    clkBtn = $(this);
                    $('.btn-primary').each(function(i) {
                        $(this).addClass('btn-outline').removeClass('btn-primary').removeClass('selected');
                    });
                    clkBtn.addClass('selected'); // primary will be added by updateChart
                    updateChart();
                });
                $('.dateField').change(function() {
                    updateChart();
                })
            });

            function updateChart() {
                let activeBtn = jQuery('#increment-selector li.selected');
                activeBtn.removeClass('btn-outline').addClass('btn-primary');
                let increment = activeBtn.data('increment');
                let startDate=$('#startDate').val() || '2019-08-15';
                let endDate=$('#endDate').val() || today;
                doChart({increment, startDate, endDate});
            }


            function doChart(o) {
                $('svg').empty();
                console.log($.param(o) )
                jQuery.getJSON('./usageData?'+$.param(o), function(data) {
                console.log(data);
                let options = {
                    margin: 200,    
                    xValueProp: 'period', // this is the data[xValueLabel] property with data in it
                    xAxisLabel: 'Date',
                    yValueProp: 'periodUses',
                    yAxisLabel: 'Uses',
                    chartTitle: 'MyGuide Usage by ' + data.increment + ': ' + data.startDate + ' - ' + data.endDate
                }
                createBarChart(data.details, options);
                });
            }
    </script>
</body>
</html>